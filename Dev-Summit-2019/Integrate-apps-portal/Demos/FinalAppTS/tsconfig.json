{
  "compilerOptions": {
    "lib": ["es5", "es2015", "dom", "scripthost"],
    "module": "amd",
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "es5",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "./app/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
